{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd alma-backend && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd alma-backend && python manage.py migrate && python manage.py runserver 0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}